                    \%default:Master%  %wlp3s0wi%  %cpu%  %battery%  %date% \
                    \<action=`xkb-switch -n`>%kbd%</action> "

       , commands = [ Run BatteryP ["BAT0"] [ "--template" , "<acstatus>"
                                , "--Low"       , "13"        -- units: %
                                , "--High"      , "70"        -- units: %
