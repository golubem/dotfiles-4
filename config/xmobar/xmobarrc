                                            , "-w"
                                            , "3"
                                            ] 5
                    , Run Cpu [ "--template"
                              , "<action=`urxvtc -e htop`> <total>%</action>"
                              , "-w", "3"] 15
    		        , Run Date "<fc=#c5c8c6>%b %_d %H:%M:%S</fc>" "date" 10
                    , Run Kbd [("us(dvp)", "en"), ("ru(diktor)", "ru")]
                    , Run Volume "default" "Master" [ "--template" , "<action=`amixer -q set Master toggle`><status></action>"
                                        , "-w"          , "3"
                                        , "--"
                                        , "-c"          , "#d14548"
                                        , "-o"          , " <volume>%"
                                        , "-C"          , "#d2c5bc"
                                        , "-O"          , " <volume>%"
                                        ] 1
                    , Run UnsafeStdinReader
                    , Run Mail [("   ", "~/.mail/gmail/INBOX")] "gmail"
                    , Run MPD ["-t", "<action=`mpc toggle`><statei></action> \
                                     \<action=`urxvt -e ncmpcpp`><artist> \
                                     \- <title></action> [<flags>]"
