#!/bin/sh

######################################################################
# Load configs
######################################################################
if [ -d /etc/X11/xinit/xinitrc.d ]; then
  for f in /etc/X11/xinit/xinitrc.d/*; do
    [ -x "$f" ] && . "$f"
  done
  unset f
fi

######################################################################
# Pulseaudio
######################################################################
# start-pulseaudio-x11 &

######################################################################
# Set keyboard layout settings
######################################################################
setxkbmap us,ru dvp,dvp
setxkbmap -option 'grp:rctrl_toggle'
#setxkbmap -option 'grp:toggle'
kbdd &

pidgin &
urxvtd &
compton &
xsetroot -cursor_name left_ptr
hsetroot -solid '#202020'
feh --bg-fill ~/.xmonad/wall.png --bg-fill ~/.xmonad/wall.png &
xautolock -time 10 -locker 'lock.sh' &
stalonetray &
udisks-glue -f &
clipit &
twmnd &

######################################################################
# Exec WM
######################################################################
xmonad > ~/.xmonad/pipe
